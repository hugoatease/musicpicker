<div class="row">
  <br />
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-body">
        <h3 class="text-center">Musicpicker</h3>
        <h4 class="text-center">Password change</h4><br />
        {{#each errors}}
        <div class="alert alert-warning">
          <b>Error.</b> {{{this}}}
        </div>
        {{/each}}
        <form method="post">
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Current password" />
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="new_password" placeholder="New password" />
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_new" placeholder="Confirm new password" />
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Change password</button>
            &nbsp;&nbsp;
            <a href="/" class="btn btn-default">Cancel</a>
          </div>
        </form>
        <br />
      </div>
    </div>
  </div>
</div>
